<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/get_otp_text"
        android:text="+91 9876543212"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/pencil_icon"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toEndOf="@id/get_otp_text"
        app:layout_constraintTop_toTopOf="@id/get_otp_text"
        app:layout_constraintBottom_toBottomOf="@id/get_otp_text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enter_your_otp_text"
        android:text="Enter your\nOTP"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/get_otp_text"
        app:layout_constraintStart_toStartOf="@id/get_otp_text"
        />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/country_code"
        android:textSize="15sp"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="5dp"
        android:text="1234"
        app:layout_constraintTop_toBottomOf="@id/enter_your_otp_text"
        app:layout_constraintStart_toStartOf="@id/get_otp_text"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/continue_button_2"
        android:text="Continue"
        android:background="@drawable/mybutton"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/country_code"
        app:layout_constraintStart_toStartOf="@id/get_otp_text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:text="0:59"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/continue_button_2"
        app:layout_constraintTop_toTopOf="@id/continue_button_2"
        app:layout_constraintBottom_toBottomOf="@id/continue_button_2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>